<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tn.esprit.gamer"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/gamer"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gamer"
        tools:targetApi="31">
        <activity
            android:name="tn.esprit.gamer.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaration for LoginActivity -->
        <activity
            android:name="tn.esprit.gamer.LoginActivity"
            android:exported="true">
            <!-- Intent filters if needed -->
        </activity>
        <activity
            android:name="tn.esprit.gamer.RegisterActivity"
            android:exported="true">
            <!-- Intent filters if needed -->
        </activity>
        <activity
            android:name="tn.esprit.gamer.ForgetPasswordActivity"
            android:exported="true">
            <!-- Intent filters if needed -->
        </activity>
    </application>

</manifest>
