<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="277dp"
        android:layout_height="55dp"
        android:text="Enter the code sent to you by Email or Mobile number"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please enter your new password and confirm it "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="140dp" />

    <EditText
        android:id="@+id/editTextTextPassword4"
        android:layout_width="296dp"
        android:layout_height="52dp"
        android:backgroundTint="#f90043"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawableTint="#f90043"

        android:ems="10"
        android:text="   password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="204dp" />

    <EditText
        android:id="@+id/editTextTextPassword5"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:backgroundTint="#f90043"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawableTint="#f90043"
        android:ems="10"
        android:text="   confirm password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="319dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:backgroundTint="#f90043"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="456dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="44dp"
        android:layout_height="46dp"
        android:adjustViewBounds="false"

        android:backgroundTint="@color/transparent"
        android:tint="#f90043"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        tools:layout_editor_absoluteY="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>